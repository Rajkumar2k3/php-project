

$('#protanopia').on('click', function () {
  $('.theme-container').removeClass('deuteranopia');
  $('.theme-container').addClass('protanopia');
  Cookies.set('body_color', 'protanopia');
});

// Get Cookie
var body_color = Cookies.get('body_color');

// Cookie Exists
if (body_color) {
  $('.theme-container').addClass(body_color);
}
// Cookie Doesn't Exist
else {
  $('.theme-container').removeClass(body_color);
}


